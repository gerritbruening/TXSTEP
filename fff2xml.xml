<?xml version="1.0" encoding="UTF-8"?>
<script xmlns="http://www.xstep.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <variables>
        <variable type="execution-file" name="execute">file:///C:/Users/Gerrit/txstep/ueb/txstep.tu</variable>
        <char-group name="ts">{#},NMO.</char-group>
        <!-- sources -->
        <variable type="permanent-file" name="muo-fff" code="utf8"
            >file:///C:/Users/Gerrit/txstep/txt/MoE76-78.txt</variable>
        <!--<variable type="permanent-file" name="moe1-fff" code="utf8"
            >file:///C:/Users/Gerrit/txstep/txt/MoE1.FFF</variable>-->
        <variable type="permanent-file" name="moe1-txt" code="utf8"
            >file:///C:/Users/Gerrit/txstep/txt/MoE1_text.txt</variable>
        <!-- outputs -->
        <variable type="permanent-file" name="muo-z1" option="erase" format="tustep"
            >file:///C:/Users/Gerrit/txstep/txt/MoE76-78_z1.tf</variable>
        <variable type="permanent-file" name="muo-z1a" option="erase" format="tustep"
            >file:///C:/Users/Gerrit/txstep/txt/MoE76-78_z1a.tf</variable>
        <variable type="permanent-file" name="muo-z1b" option="erase" format="tustep"
            >file:///C:/Users/Gerrit/txstep/txt/MoE76-78_z1b.tf</variable>
        <variable type="permanent-file" name="muo-z2" option="erase" format="tustep"
            >file:///C:/Users/Gerrit/txstep/txt/MoE76-78_z2.tf</variable>
        <variable type="permanent-file" name="muo-z3" option="erase" format="tustep"
            >file:///C:/Users/Gerrit/txstep/txt/MoE76-78_z3.tf</variable>
        <variable type="permanent-file" option="erase" name="muo-xml"
            >file:///C:/Users/Gerrit/txstep/txt/MoE76-78.xml</variable>
        <variable type="permanent-file" name="moe1-t" option="erase" format="tustep"
            >file:///C:/Users/Gerrit/txstep/txt/MoE1.tf</variable>
    </variables>
    <transform source="$muo-fff" destination="$muo-z1">
        <insert-at-start>{{Text}}</insert-at-start>
        <pass>
            <modify>
                <exchange>
                    <exchange-table>
                        <!-- Akzente -->
                        <exception-string>%{%}</exception-string>
                        <!-- frz. Anführungszeichen -->
                        <exception-string>#.?</exception-string>
                        <!-- Kapiteltitel -->
                        <string-pair>
                            <search-string>{{RD:"ÜBERSCHRIFT 4"}}</search-string>
                            <replacement-string/>
                        </string-pair>
                        <string-pair>
                            <search-string>FD:"S-KAPITEL"}}{{JL:"LESETEXT TITEL","KK-{#}/{#}"}}{{JD:</search-string>
                            <replacement-string>Kapiteltitel Kapitelnummer=</replacement-string>
                        </string-pair>
                        <string-pair>
                            <search-string>/FD:"S-KAPITEL"</search-string>
                            <replacement-string>/Kapiteltitel</replacement-string>
                        </string-pair>
                        <string-pair>
                            <search-string>{{/FD:"S-KAPITEL"}}{[}{{EL}}</search-string>
                            <replacement-string/>
                        </string-pair>
                        <!-- Absatz -->
                        <string-pair>
                            <search-string>{{RD}}{{PS:"LESETEXT DRUCK"}}</search-string>
                            <replacement-string>{{Absatzanfang/}}</replacement-string>
                        </string-pair>
                        <string-pair>
                            <search-string>{{TS:{#}{00}{c:ts},RT,NO}}</search-string>
                            <replacement-string/>
                        </string-pair>
                        <string-pair>
                            <search-string>{{HR}}{{PS:"LESETEXT DRUCK"}}</search-string>
                            <replacement-string>{{Absatzanfang/}}</replacement-string>
                        </string-pair>
                        <!-- Erstausgabe -->
                        <string-pair>
                            <search-string>{{RD:"ÜBERSCHRIFT 7"}}{{JD:"MoE-1-S{#}"}}\[Seite {#}\]</search-string>
                            <replacement-string>{{Erstausgabe Band="MoE-1"}}{-2=}{{/Erstausgabe}}</replacement-string>
                        </string-pair>
                        <string-pair>
                            <search-string>{{RD:"ÜBERSCHRIFT 7"}}\[Seite {#}\]</search-string>
                            <replacement-string>{{Erstausgabe}}{-2=}{{/Erstausgabe}}</replacement-string>
                        </string-pair>
                        <!-- Rowohlt -->
                        <string-pair>
                            <search-string>{{FD:"L-KONKORDANZ"}}{0} \{\{GW 1 {#}\}\} {{/FD:"L-KONKORDANZ"}}</search-string>
                            <replacement-string>{{Rowohlt Band="1"}}{-24=}{{/Rowohlt}}</replacement-string>
                        </string-pair>
                        <string-pair>
                            <search-string>{{JU:FL}}</search-string>
                            <replacement-string/>
                        </string-pair>
                        <!-- Wortumbruch -->
                        <string-pair>
                            <search-string>{{CS:"VERSTECKTER WORTUMBRUCH"}}*{{/CS}}</search-string>
                            <replacement-string>{{Worttrennung ersterTeil="{-6=}"/}}</replacement-string>
                        </string-pair>
                    </exchange-table>
                </exchange>
            </modify>
        </pass>
        <insert-at-end>{{/Text}}</insert-at-end>
    </transform>
    <transform source="$muo-z1" destination="$muo-z1a">
        <define-text-units>
            <text-unit-start>
                <comparison-table>
                    <exclusion-string>{{Erstausgabe</exclusion-string>
                    <comparison-string>{{</comparison-string>
                </comparison-table>
            </text-unit-start>
        </define-text-units>
        <pass>
            <modify>
                <exchange>
                    <exchange-table>
                        <string-pair>
                            <search-string>{{/Kapiteltitel}}{[} {{Erstausgabe*}}{#}{{/Erstausgabe}}{]}</search-string>
                            <replacement-string/>
                        </string-pair>
                    </exchange-table>
                </exchange>
            </modify>
        </pass>
    </transform>
    <transform source="$muo-z1a" destination="$muo-z1b">
        <define-text-units>
            <text-unit-start>
                <comparison-table>
                    <exclusion-string>{{Absatzanfang</exclusion-string>
                    <exclusion-string>{{Kapiteltitel</exclusion-string>
                    <comparison-string>{{Erstausgabe</comparison-string>
                </comparison-table>
            </text-unit-start>
        </define-text-units>
        <pass>
            <modify>
                <exchange>
                    <exchange-table>
                        <string-pair>
                            <search-string>{{/Erstausgabe}}{[} {{Absatzanfang/}}</search-string>
                            <replacement-string/>
                        </string-pair>
                    </exchange-table>
                </exchange>
            </modify>
        </pass>
        <pass>
            <modify>
                <exchange>
                    <exchange-table>
                        <string-pair>
                            <search-string>}}517{{/Erstausgabe}}*{{/Kapiteltitel}} {{Absatzanfang/}}{[}Diotima</search-string>
                            <replacement-string>{{Versal}}Diotima{{/Versal}}</replacement-string>
                        </string-pair>
                    </exchange-table>
                </exchange>
            </modify>
        </pass>
        <new-line-before>
            <search-table>
                <search-string>{{Kapiteltitel</search-string>
                <search-string>{{Absatzanfang/}}</search-string>
            </search-table>
        </new-line-before>
    </transform>
    <transform source="$muo-z1b" destination="$muo-z2">
        <new-line-before>
            <search-table>
                <search-string>{{PW:AUSZEICHUNGEN,</search-string>
                <search-string>{{IT+}}{{PW:"Popup-Verknüpfung",</search-string>
                <search-string>{{PW:"Popup-Verknüpfung",</search-string>
            </search-table>
        </new-line-before>
        <new-line-after>
            <search-table>
                <search-string>{{EL}}{{IT}}</search-string>
                <search-string>{{EL}}</search-string>
            </search-table>
        </new-line-after>
    </transform>
    <transform source="$muo-z2" destination="$muo-z3">
        <pass>
            <modify>
                <exchange>
                    <exchange-table>
                        <!-- Akzente -->
                        <exception-string>%{%}</exception-string>
                        <!-- frz. Anführungszeichen -->
                        <exception-string>#.?</exception-string>
                        <!-- Kapiteltitel -->
                        <!-- Variante / Handexemplar / Frisé / Korrektur -->
                        <string-pair>
                            <search-string>{{PW:AUSZEICHUNGEN,{#}.{#},{#}.{#},"HANDEXEMPLAR Variante Bleistift"}}Haken{{LT}}*{{EL}}</search-string>
                            <replacement-string>{{Apparateintrag}}{{Variante}}{-5=}{{/Variante}}{{Handexemplar}}{{Musilzeichen Schreibmaterial="Blei" Zeichen="Haken"/}}{{/Handexemplar}}{{/Apparateintrag}}</replacement-string>
                        </string-pair>
                        <string-pair>
                            <search-string>{{PW:"Popup-Verknüpfung",{#}.{#},{#}.{#},"Druckvariante Fris%/e"}}*{{LT}}*{{EL}}</search-string>
                            <replacement-string>{{Apparateintrag}}{{Variante}}{-5=}{{/Variante}}{{Frise}}{-10=}{{/Frise}}{{/Apparateintrag}}</replacement-string>
                        </string-pair>
                        <string-pair>
                            <search-string>{{PW:AUSZEICHUNGEN,{#}.{#},{#}.{#},"HANDEXEMPLAR Korrektur Bleistift"}}*{{HR}}{{HR}}Druckvariante Fris%/e: *{{LT}}*{{EL}}</search-string>
                            <replacement-string>{{Apparateintrag}}{{Variante}}{-5=}{{/Variante}}{{Korrektur}}{-42=}{{/Korrektur}}{{Handexemplar}}{-42=}{{/Handexemplar}}{{Frise}}{-10=}{{/Frise}}{{/Apparateintrag}}</replacement-string>
                        </string-pair>
                        <string-pair>
                            <search-string>{{PW:"Popup-Verknüpfung",{#}.{#},{#}.{#},"Druckvariante Orginal"}}*{{LT}}*{{EL}}</search-string>
                            <replacement-string>{{Apparateintrag}}{{Variante}}{-10=}{{/Variante}}{{Korrektur}}{-5=}{{/Korrektur}}{{/Apparateintrag}}</replacement-string>
                        </string-pair>
                        <string-pair>
                            <search-string>{{IT+}}{{PW:"Popup-Verknüpfung",{#}.{#},{#}.{#},"Druckvariante Erstausgabe"}}gesperrt{{HR}}{{HR}}Druckvariante Fris%/e: kursiv{{LT}}*{{EL}}{{IT}}</search-string>
                            <replacement-string>{{Apparateintrag}}{{Variante}}{{kursiv}}{-9=}{{/kursiv}}{{/Variante}}{{Druck}}{{gesperrt}}{-9=}{{/gesperrt}}{{/Druck}}{{Frise}}{{kursiv}}{-9=}{{/kursiv}}{{/Frise}}{{/Apparateintrag}}</replacement-string>
                        </string-pair>
                    </exchange-table>
                </exchange>
            </modify>
        </pass>
    </transform>
    <transform source="$muo-z3" destination="$muo-xml"/>
    <display file="$muo-xml"/>
    <transform source="$moe1-txt" destination="$moe1-t"/>
</script>
