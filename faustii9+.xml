        <pos-ind-b value="yes"/>       
        <version-id>v05</version-id><version-sort-val value="3"/>
    </compare> 
    
    <compare versiona="$version-1" versionb="$version-7" variants="$diff" type="corrections" option="append" listing="-">
        <compare-units mode="word"/>
        <add-context>
            <omission length-before="0" length-lemma="3" length-after="0"/>
            <replacement length-before="0" length-lemma="3" length-after="0"/>
            <insertion length-before="1" length-after="0"/>
        </add-context>
        <pos-ind-b value="yes"/>       
        <version-id>v07</version-id><version-sort-val value="4"/>
    </compare> 
    
    <compare versiona="$version-1" versionb="$version-33" variants="$diff" type="corrections" option="append" listing="-">
        <compare-units mode="word"/>
        <add-context>
            <omission length-before="0" length-lemma="3" length-after="0"/>
