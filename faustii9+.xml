<?xml version="1.0" encoding="UTF-8"?>
<script xmlns="http://www.xstep.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <!-- Compare more than 9 (xml-)sources, output = diff-files with TEI inspired tags; 
        from these files, after cumulating and sorting, a synopsis of the variant readings is generated -->
    <variables>
        <variable type="execution-file" name="execute">file:///C:/Users/Gerrit/txstep/ueb/txstep.tu</variable>
        <!-- Ausgangsdaten -->
        <variable type="permanent-file" name="h-x" code="utf8"
            >file:///C:/Users/Gerrit/txstep/texte/h.xml</variable>
        <variable type="permanent-file" name="ih0a-x" code="utf8"
            >file:///C:/Users/Gerrit/txstep/texte/ih0a.xml</variable>
        <!-- Vergleichsdaten -->
        <variable type="permanent-file" option="erase" name="h-t" format="tustep"
            >file:///C:/Users/Gerrit/txstep/texte/h.tf</variable>
        <variable type="permanent-file" option="erase" name="ih0a-t" format="tustep"
            >file:///C:/Users/Gerrit/txstep/texte/ih0a.tf</variable>        
        <variable type="permanent-file" name="diff" option="erase">file:///C:/Users/Gerrit/txstep/ueb/bau-diff12</variable>
        <variable type="permanent-file" name="diff-listing" option="erase" format="tustep">file:///C:/Users/Gerrit/txstep/ueb/schell-diff.list</variable>
    </variables>

    <compare versiona="$version-1" versionb="$version-2" variants="$diff"  type="corrections" listing="-">
        <compare-units mode="word"/>
        <add-context>
            <omission length-before="0" length-lemma="3" length-after="0"/>
            <replacement length-before="0" length-lemma="3" length-after="0"/>
            <insertion length-before="1" length-after="0"/>
        </add-context>
        <pos-ind-b value="yes"/>       
        <version-id>v02</version-id><version-sort-val value="1"/>
    </compare>  
    
    <compare versiona="$version-1" versionb="$version-3" variants="$diff" type="corrections" option="append" listing="-">
        <compare-units mode="word"/>
        <add-context>
            <omission length-before="0" length-lemma="3" length-after="0"/>
            <replacement length-before="0" length-lemma="3" length-after="0"/>
            <insertion length-before="1" length-after="0"/>
        </add-context>
        <pos-ind-b value="yes"/>       
        <version-id>v03</version-id><version-sort-val value="2"/>
    </compare> 
    
    <compare versiona="$version-1" versionb="$version-5" variants="$diff" type="corrections" option="append" listing="-">
        <compare-units mode="word"/>
        <add-context>
